<header>
<div id="header">
  <ul class="navbar nav justify-content-left bg-dark">
    <li class="nav-item">
      <%= link_to "Home", root_path, class: "nav-link navbar-brand btn btn-danger" %>
    </li>

    <ul class="nav navbar justify-content-center nav-pills">

    <% if user_signed_in? %>

    <li class="nav-item">
      <%= link_to "Mon profil", user_path, class: "navlink navbar-brand btn-sm btn-primary" %>
    </li>
    <li class="nav-item">
      <%= link_to "Liste des events", events_path, class: "nav-link navbar-brand btn-sm btn-info" %>
    </li>
    <li class="nav-item">
      <%= link_to "Créer un event", new_event_path, class: "nav-link navbar-brand btn-sm btn-success" %>
    </li>
    <div class="btn-group">
      <li type="button" class="navbar-brand btn-sm btn-warning text-white dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Mon compte
      </li>
        <div class="dropdown-menu">
          <li><%= link_to "Editer mon profil", edit_user_registration_path(current_user), class: "dropdown-item" %></li>
          <div class="dropdown-divider"></div>
          <li><%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
        </div>
    </div>

    <% else %>

    <li class="nav-item">
      <%= link_to "S'inscrire", new_user_registration_path, class: "nav-link navbar-brand btn-sm btn-primary" %>
    </li>
    <li class="nav-item">
      <%= link_to "Se connecter", new_user_session_path, class: "nav-link navbar-brand btn-sm btn-success" %>
    </li>

    <% end %>
    </ul>
  </ul>
</div>
</header>
