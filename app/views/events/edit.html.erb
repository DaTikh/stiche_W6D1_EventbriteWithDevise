<h3>Edition de l'event</h3>

<div class="container">
  <%= form_for @event, url: {action: "update"} do |u| %>
  <div class="form-group">
      <%= u.label "Titre de l'event" %><br>
      <%= u.text_field :title %><br>
  </div>
  <div class="form-group">
      <%= u.label "Description" %><br>
      <%= u.text_area :description %><br>
  </div>
  <div class="form-group">
      <%= u.label "Date et heure" %><br>
      <%= u.datetime_select :date, order: [:day, :month, :year], minute_step: 15 %><br>
  </div>
  <div class="form-group">
      <%= u.label "Lieu" %><br>
      <%= u.text_field :place %><br>
  </div>
  <div class="form-group">
      <%= u.label "Prix d'inscription" %><br>
      <%= u.number_field :price, {within: 0..1000, step: 1, default: 0} %><br>
  </div>
  <div class="submit">
      <%= u.submit "Enregistrer les modifications", class: "btn btn-success" %>
  </div>

  <% end %>
</div>
