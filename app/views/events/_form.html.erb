<h4 class="text-center"> <%= @form_title %> </h4>

  <div class="container">
     <div class="row justify-content-center">

      <% @form_resource.each_with_index do |event, i| %>

        <div class="col-md-6">
          <div class="form-group border rounded <%= @border_class %>" style="padding: 10px">

            <p><strong><%= event.title.capitalize %></strong></p>

            <div class="row align-items-center justify-content-center">

              <div class="col-6">
                <%= event.date.strftime('%e %B').downcase %> - <%= event.place.capitalize %>
              </div>

              <div class="col-4">
                <%= link_to "#{@form_button}", event_path(event.id), class: "btn #{@button_class}" %>
              </div>

            </div>

          </div>
        </div>

      <% end %>

    </div>
  </div>
